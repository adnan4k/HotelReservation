    <main>
      <section class='section-registration'>
        <h1 class='heading-secondary'>Create account</h1>
        <div class='toggle-box'>
          <span class='toggle-box-in'>
            <button class='toggle toggle--user toggle--active'>As a user</button><button
              class='toggle toggle--hotel'
            >As a hotel</button>
          </span>
        </div>
        <form action='/auth/userSignUp' method='post' class='form'>
        <div class="common">
          <label for='full-name' class='form-label form-user-label'>Full name</label>
          <input
            class='form-input form-input--user-name'
            id='full-name'
            name='full_name'
            required
            type='text'
          />
          <p class='form-Validation form-Validation-name'>&nbsp;</p>
          <label
            for='user-name'
            class='form-label form-user-label'
          >Username</label>
          <input
            class='form-input'
            id='user-name'
            name='user_name'
            required
            type='text'
          />
          <p class='form-Validation form-Validation-name'>&nbsp;</p>
          <label for='email' class='form-label'>Email</label>
          <input
            class='form-input form-input--email'
            id='email'
            name='email'
            type='email'
            required
          />
          <p class='form-Validation form-Validation-email'>&nbsp;</p>
          <label for='password' class='form-label'>Password</label>
          <input
            class='form-input form-input--password'
            id='password'
            name='password'
            type='password'
            minlength='8'
            required
          />
          <p class='form-Validation form-Validation-password'>&nbsp;</p>
          <input
            type='submit'
            class='btn btn-blue btn-register'
            value='register'
          />
          </div>
          <div class='location hidden'>
            <label class='form-label'> location</label>
            <br />
            <span class='btn-coord btn-coord-gps'>Get location from GPS</span>
            <span class='btn-coord btn-coord-map'>Get location from map</span>
            <p class='map-instruction hidden'>
              Click on the hotel location on the map
            </p>
            <input
              id='lat'
              name='latitude'
              class='location-input location-input-lat'
              type='text'
              value=''
            />
            <input
              id='long'
              name='longitude'
              class='location-input location-input-long'
              type='text'
              value=''
            />
            <div id='map' class='map'></div>
          </div>
        </form>
      </section>
    </main>

