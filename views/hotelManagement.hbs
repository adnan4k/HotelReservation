          <div class="room-type-form">
            <div class="form-box">
              <h2 class="heading-tertiary">Add Room Type</h2>
              <form
                method="post"
                action="http://localhost:3000/client/hotelRoomTypes"
                class="form"
              >
                <label for="roomtype" class="form-label">Room type Name</label>
                <input
                  class="form-input"
                  id="roomtype"
                  type="text"
                  name="name"
                  required
                />

                <label for="numberofRooms" class="form-label"
                  >Number of Rooms</label
                >
                <input
                  class="form-input"
                  id="numberofRooms"
                  type="number"
                  name="totalNumber"
                  required
                />

                <label for="Price" class="form-label">Price</label>
                <input
                  class="form-input"
                  id="Price"
                  type="number"
                  name="price"
                  required
                />

                <label for="time" class="form-label"
                  >Reservation expiry Time(in minute)</label
                >
                <input
                  class="form-input"
                  id="Price"
                  type="number"
                  name="reservationLifetime"
                  required
                />

                <label for="Description" class="form-label">Description</label>

                <textarea
                  class="form-textarea"
                  id="Description"
                  type="text"
                  name="description"
                  required
                >
                </textarea>

                <button class="btn btn-blue btn-register">Add Room Type</button>
              </form>
            </div>
          </div>
        </div>
