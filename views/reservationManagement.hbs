    <main>
      <section class="reservationManagement">
        <h1 class="heading-secondary">Reservation Management</h1>
        <div class="reservation-box grid grid-2-col">
          <div class="reservations">
            <h2 class="reservation-heading">Reservation</h2>
            <div class="search">
              <input
                class="search-input search-input-reservation"
                type="text"
                placeholder="Search"
                name=""
                id=""
              />
              <button class="search-btn" id="search-reservation">
                <i class="fa-solid fa-magnifying-glass"></i>
              </button>
            </div>

            <div class="cards reservationCards">
              <div class="card" data-id="">
                <div class="room">vip</div>
                <div class="card-head-box">
                  <h2 class="heading-tertiary">natnael abebaw</h2>
                  <button class="btn btn-blue promote">Promote</button>
                </div>
              </div>
            </div>
          </div>

          <div class="occupations">
            <h2 class="reservation-heading">Occupations</h2>
            <div class="search">
              <input
                class="search-input search-input-occupancy"
                type="text"
                placeholder="Search"
                name=""
                id=""
              />
              <button class="search-btn" id="search-occupancy">
                <i class="fa-solid fa-magnifying-glass"></i>
              </button>
            </div>
            <div class="cards occupancyCards">
              <div class="card" data-id="">
                <table>
                  <tr>
                    <td>User</td>
                    <td class="heading-tertiary">Natnael abebaw</td>
                  </tr>
                  <tr>
                    <td>Room type</td>
                    <td>Vip</td>
                  </tr>
                  <tr>
                    <td>Expiry time</td>
                    <td>30"</td>
                  </tr>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <div class="popup">
      <div class="popup-form">
        <h2 class="heading-tertiary">Promote</h2>
        <form
          method="post"
          action="http://localhost:3000/client/promoteReservation"
          class="form"
        >
          <input
            class="input-id"
            id="roomtype"
            type="text"
            name="reservationId"
            required
          />
          <label for="roomtype" class="form-label"
            >Number of days of occupacy</label
          >

          <input
            class="form-input form-input--password"
            id="roomtype"
            type="text"
            name="occupancyLifetimeDays"
            required
          />

          <button class="btn btn-blue btn-register">Promote</button>
        </form>
